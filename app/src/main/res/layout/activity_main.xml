<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cpti.calino.MainActivity">

    <TextView
        android:id="@+id/connectionStatusLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/connection_status_label"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/openConnectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openConnectionButton" />

        <Button
            android:id="@+id/closeConnectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closeConnectionButton" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
